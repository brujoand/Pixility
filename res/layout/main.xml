<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		
		<Button android:layout_width="100px"
			android:layout_height="wrap_content" android:text="Pixilify"
			android:layout_weight="0.2" android:id="@+id/randomImageButton"
			android:onClick="fetchRandomImage" />
			
		<TextView android:layout_width="200px"
			android:layout_height="wrap_content" android:text="Press pixilfy! :)"
			android:layout_weight="0.2" android:id="@+id/nowShowing" android:gravity="center_horizontal"/>


	</LinearLayout>

	<WebView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/webView" />
</LinearLayout>
